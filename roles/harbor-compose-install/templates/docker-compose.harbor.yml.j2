networks:
  harbor:
    external: false  

services:
  log:
    image: goharbor/harbor-log:{{ harbor_version }}
    container_name: harbor-log
    restart: {{ harbor_restart | default('always') }}
    # network_mode: host
    cap_drop:
      - ALL
    cap_add:
      - CHOWN
      - DAC_OVERRIDE
      - SETGID
      - SETUID
    volumes:
      - /var/log/harbor/:/var/log/docker/:z
      # - {{ harbor_config_path }}/log/logrotate.conf:/etc/logrotate.d/logrotate.conf
      # - {{ harbor_config_path }}/log/rsyslog_docker.conf:/etc/rsyslog.d/rsyslog_docker.conf
    ports:
      - 127.0.0.1:1514:10514
    networks:
      - harbor
  registry:
    image: goharbor/registry-photon:{{ harbor_version }}
    container_name: registry
    restart: {{ harbor_restart | default('always') }}
    cap_drop:
      - ALL
    cap_add:
      - CHOWN
      - SETGID
      - SETUID
    volumes:
      - {{ harbor_data_path }}/registry:/storage:z
      - {{ harbor_config_path }}/registry:/etc/registry/:z
      # - {{ harbor_data_path }}/secret/registry/root.crt:/etc/registry/root.crt
      # - {{ harbor_config_path }}/shared/trust-certificates:/harbor_cust_cert
    networks:
      - harbor
    depends_on:
      - log
    logging:
      driver: "syslog"
      options:
        syslog-address: "tcp://localhost:1514"
        tag: "registry"

  registryctl:
    image: goharbor/harbor-registryctl:{{ harbor_version }}
    container_name: registryctl
    env_file:
      - {{ harbor_config_path }}/registryctl/env
    restart: {{ harbor_restart | default('always') }}
    cap_drop:
      - ALL
    cap_add:
      - CHOWN
      - SETGID
      - SETUID
    volumes:
      - {{ harbor_data_path }}/registry:/storage:z
      - {{ harbor_config_path }}/registry:/etc/registry/:z
      - {{ harbor_config_path }}/registryctl/config.yml:/etc/registryctl/config.yml
      # - {{ harbor_config_path }}/shared/trust-certificates:/harbor_cust_cert
    networks:
      - harbor
    depends_on:
      - log
    logging:
      driver: "syslog"
      options:
        syslog-address: "tcp://localhost:1514"
        tag: "registryctl"

  postgresql:
    image: goharbor/harbor-db:{{ harbor_version }}
    container_name: harbor-db
    restart: {{ harbor_restart | default('always') }}
    cap_drop:
      - ALL
    cap_add:
      - CHOWN
      - DAC_OVERRIDE
      - SETGID
      - SETUID
    volumes:
      - {{ harbor_data_path }}/database:/var/lib/postgresql/data:z
    networks:
      harbor:
    env_file:
      - {{ harbor_config_path }}/db/env
    depends_on:
      - log
    logging:
      driver: "syslog"
      options:
        syslog-address: "tcp://localhost:1514"
        tag: "postgresql"
    shm_size: '1gb'

  core:
    image: goharbor/harbor-core:{{ harbor_version }}
    container_name: harbor-core
    env_file:
      - {{ harbor_config_path }}/core/env
    restart: {{ harbor_restart | default('always') }}
    cap_drop:
      - ALL
    cap_add:
      - SETGID
      - SETUID
    volumes:
      # - {{ harbor_data_path }}/ca_download:/etc/core/ca/:z
      - {{ harbor_data_path }}/core:/data/:z
      # - {{ harbor_config_path }}/core/certificates:/etc/core/certificates/:z
      - {{ harbor_config_path }}/core/app.conf:/etc/core/app.conf
      # - {{ harbor_data_path }}/secret/core/private_key.pem:/etc/core/private_key.pem
      # - {{ harbor_data_path }}/secret/keys/secretkey:/etc/core/key
      # - {{ harbor_config_path }}/shared/trust-certificates:/harbor_cust_cert
    networks:
      harbor:
    depends_on:
      - log
      - registry
      - redis
      - postgresql
    logging:
      driver: "syslog"
      options:
        syslog-address: "tcp://localhost:1514"
        tag: "core"

  portal:
    image: goharbor/harbor-portal:{{ harbor_version }}
    container_name: harbor-portal
    restart: {{ harbor_restart | default('always') }}
    cap_drop:
      - ALL
    cap_add:
      - CHOWN
      - SETGID
      - SETUID
      - NET_BIND_SERVICE
    volumes:
      - {{ harbor_config_path }}/portal/nginx.conf:/etc/nginx/nginx.conf
    networks:
      - harbor
    depends_on:
      - log
    logging:
      driver: "syslog"
      options:
        syslog-address: "tcp://localhost:1514"
        tag: "portal"

  jobservice:
    image: goharbor/harbor-jobservice:{{ harbor_version }}
    container_name: harbor-jobservice
    env_file:
      - {{ harbor_config_path }}/jobservice/env
    restart: {{ harbor_restart | default('always') }}
    cap_drop:
      - ALL
    cap_add:
      - CHOWN
      - SETGID
      - SETUID
    volumes:
      # - {{ harbor_data_path }}/job_logs:/var/log/jobs:z
      - {{ harbor_config_path }}/jobservice/config.yml:/etc/jobservice/config.yml
      # - {{ harbor_config_path }}/shared/trust-certificates:/harbor_cust_cert
    networks:
      - harbor
    depends_on:
      - core
    logging:
      driver: "syslog"
      options:
        syslog-address: "tcp://localhost:1514"
        tag: "jobservice"
  redis:
    image: goharbor/redis-photon:{{ harbor_version }}
    container_name: redis
    restart: {{ harbor_restart | default('always') }}
    cap_drop:
      - ALL
    cap_add:
      - CHOWN
      - SETGID
      - SETUID
    volumes:
      - {{ harbor_data_path }}/redis:/var/lib/redis
    networks:
      harbor:
    depends_on:
      - log
    logging:
      driver: "syslog"
      options:
        syslog-address: "tcp://localhost:1514"
        tag: "redis"
  proxy:
    image: goharbor/nginx-photon:{{ harbor_version }}
    container_name: nginx
    restart: {{ harbor_restart | default('always') }}
    cap_drop:
      - ALL
    cap_add:
      - CHOWN
      - SETGID
      - SETUID
      - NET_BIND_SERVICE
    volumes:
      - {{ harbor_config_path }}/nginx:/etc/nginx:z
      # - {{ harbor_config_path }}/shared/trust-certificates:/harbor_cust_cert
    networks:
      - harbor
    ports:
      - 80:8080
    depends_on:
      - registry
      - core
      - portal
      - log
    logging:
      driver: "syslog"
      options:
        syslog-address: "tcp://localhost:1514"
        tag: "proxy"



