apiVersion: cert-manager.io/v1
kind: Certificate
metadata:
  name: {{ (argocd_domain | default('argocd.example.com') | replace('.', '-') ~ '-tls') }}
  namespace: argocd
spec:
  secretName: {{ (argocd_domain | default('argocd.example.com') | replace('.', '-') ~ '-tls') }}
  issuerRef:
    name: cloudflare-issuer-dns-challenge
    kind: ClusterIssuer
  dnsNames:
    - {{ argocd_domain | default('argocd.example.com') }}