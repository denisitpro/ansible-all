{{ ansible_managed | comment }}

[Unit]
Description=Prometheus Node Exporter
After=network-online.target
StartLimitInterval=0

[Service]
Type=simple
User={{ node_exporter_system_user }}
Group={{ node_exporter_system_group }}
ExecStart={{ node_exporter_binary_path }} \
{% if node_exporter_bind_addr is defined %}
    --web.listen-address={{ node_exporter_bind_addr }}:{{ node_exporter_bind_port }} \
{% endif -%}
{% if supervisor_installed is defined and supervisor_installed %}
    --collector.supervisord \
{% else %}
{% for collector in node_exporter_enabled_collectors -%}
{% if not collector is mapping %}
    --collector.{{ collector }} \
{% else -%}
{% set name, options = (collector.items()|list)[0] %}
    --collector.{{ name }} \
{% for k,v in options|dictsort %}
    --collector.{{ name }}.{{ k }}={{ v }} \
{% endfor -%}
{% endif -%}
{% endfor -%}
{% endif -%}
{% for collector in node_exporter_disabled_collectors %}
    --no-collector.{{ collector }} \
{% endfor %}

SyslogIdentifier=node-exporter
Restart=always
RestartSec=1
PrivateTmp=yes
{% if ansible_mounts | selectattr('mount', 'equalto', '/home') | list %}
ProtectHome=read-only
{% else %}
ProtectHome=yes
{% endif %}
NoNewPrivileges=yes
ProtectSystem=strict
ProtectControlGroups=true
ProtectKernelModules=true
ProtectKernelTunables=yes

[Install]
WantedBy=multi-user.target
