{{ ansible_managed | comment }}

[Unit]
Description=Prometheus Node Exporter
After=network-online.target
StartLimitInterval=0

[Service]
Type=simple
User={{ node_exporter_system_user }}
Group={{ node_exporter_system_group }}
ExecStart=/usr/local/bin/node_exporter \
{% for collector in node_exporter_enabled_collectors -%}
{%   if not collector is mapping %}
    --collector.{{ collector }} \
{%   else -%}
{%     set name, options = (collector.items()|list)[0] -%}
    --collector.{{ name }} \
{%     for k,v in options|dictsort %}
    --collector.{{ name }}.{{ k }}={{ v }} \
{%     endfor -%}
{%   endif -%}
{% endfor -%}
{% for collector in node_exporter_disabled_collectors %}
    --no-collector.{{ collector }} \
{% endfor %}
{% if dc_location != 'fsn'%}
    --web.listen-address={{  ansible_default_ipv4.address }}:9100
{% endif %}
{% if dc_location == 'fsn' and ansible_distribution_major_version == '7' %}
    --web.listen-address={{ ansible_eth1.ipv4.address }}:9100
{% endif %}
{% if (dc_location == 'fsn' and ansible_distribution_major_version == '8') or (dc_location == 'fsn' and ansible_distribution == 'Ubuntu')  %}
    --web.listen-address={{node_exporter_bind_addr | default  (ansible_facts[second_interface_name].ipv4.address)  }}:9100
{% endif %}
SyslogIdentifier=node_exporter
Restart=always
RestartSec=1

PrivateTmp=yes
{% for m in ansible_mounts if m.mount == '/home' %}
ProtectHome=read-only
{% else %}
ProtectHome=yes
{% endfor %}
NoNewPrivileges=yes

ProtectSystem=strict
ProtectControlGroups=true
ProtectKernelModules=true
ProtectKernelTunables=yes


[Install]
WantedBy=multi-user.target
