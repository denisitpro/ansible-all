apiVersion: kubeadm.k8s.io/v1beta3
kind: JoinConfiguration
controlPlane:
  localAPIEndpoint:
    advertiseAddress: "{{ master_ip }}"
    bindPort: 6443
  certificateKey: "{{ k8s_cert.stdout }}"
discovery:
  bootstrapToken:
    apiServerEndpoint: "{{ controlPlaneEndpoint }}"
    token: "{{ bootstrap_token }}"
    unsafeSkipCAVerification: true  # Уберите это, если у вас настроены сертификаты
nodeRegistration:
  kubeletExtraArgs:
    node-ip: "{{ master_ip }}"