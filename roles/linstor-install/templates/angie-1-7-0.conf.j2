user  linstor;
worker_processes  {{linstor_worker_processes |default('auto')}};
worker_rlimit_nofile 65536;

pid        /run/linstor/linstor.pid;

events {
    worker_connections  {{events_worker_connections | default('65536')}};
	use	epoll;
	multi_accept	on;
}


http {
    include       /etc/linstor/mime.types;
    default_type  application/octet-stream;
    sendfile        on;

    keepalive_timeout  {{linstor_keepalive_timeout |default('65')}};

# optimizations
	#Number of requests a client can make over the keep-alive connection.
	keepalive_requests 1000;
	#Allow the server to close the connection after a client stops responding.
	reset_timedout_connection on;

	tcp_nopush	on;
	tcp_nodelay	on;
    gzip  on;
{% if linstor_proxy_read_timeout is defined %}
	proxy_read_timeout	{{ nginx_proxy_read_timeout }};
{% endif %}
{% if linstor_client_max_body_size is defined %}
	client_max_body_size	{{ nginx_client_max_body_size }};
{% endif %}

# extended configs - upstream
    include /etc/linstor/conf.d/*.conf;
    include /etc/linstor/upstream.d/*.conf;
    include /etc/linstor/http.d/*.conf;

    access_log	/var/log/linstor/access.log	main;
    error_log	/var/log/linstor/error.log	warn;

}

